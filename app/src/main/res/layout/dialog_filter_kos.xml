<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/colorBlack"
        android:layout_marginBottom="8dp"
        android:text="Tipe Kost (Gender)"/>

    <com.jaredrummler.materialspinner.MaterialSpinner
        app:ms_background_color="@color/colorBackground"
        app:ms_text_color="@color/colorBlack"
        android:id="@+id/gender_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginBottom="8dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/colorBlack"
        android:layout_marginBottom="8dp"
        android:text="Range Harga"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <com.jaredrummler.materialspinner.MaterialSpinner
            app:ms_background_color="@color/colorBackground"
            app:ms_text_color="@color/colorBlack"
            android:id="@+id/minHarga_spinner"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:padding="5dp" />

        <View
            android:layout_width="25dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@android:color/darker_gray" />

        <com.jaredrummler.materialspinner.MaterialSpinner
            app:ms_background_color="@color/colorBackground"
            app:ms_text_color="@color/colorBlack"
            android:id="@+id/maxHarga_spinner"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:padding="5dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textSize="17sp"
        android:layout_marginBottom="8dp"
        android:text="@string/fasilitas"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/cb_ac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AC"/>

            <CheckBox
                android:id="@+id/cb_kmr_mandi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kamar Mandi"/>

            <CheckBox
                android:id="@+id/cb_lmri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lemari"/>

            <CheckBox
                android:id="@+id/cb_mj_bljr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meja Belajar"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/cb_wf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WiFi"/>

            <CheckBox
                android:id="@+id/cb_cctv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CCTV"/>

            <CheckBox
                android:id="@+id/cb_ksr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kasur"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/close"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:background="@drawable/rectangle_gray_full"
            android:layout_marginEnd="10dp"
            android:text="@string/close"/>

        <Button
            android:id="@+id/cari"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginStart="10dp"
            android:background="@drawable/rectangle_green"
            android:text="cari"/>


    </LinearLayout>

</LinearLayout>