<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize">

        <fr.arnaudguyon.smartfontslib.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:text="@string/forHeader"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            app:font="@string/fontReguler" />

        <ImageView
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/menu" />

        <com.andexert.library.RippleView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/menu"
            rv_centered="true"
            app:rv_centered="true"
            app:rv_color="@color/colorRipple"
            app:rv_rippleDuration="150">

            <ImageView
                android:id="@+id/pesan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/ImgDesc"
                android:src="@drawable/massege_icon" />

        </com.andexert.library.RippleView>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@id/wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/hotNews"
                android:contentDescription="@string/ImgDesc"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/wisata"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/colorBlack"
                android:alpha="0.5"/>

            <fr.arnaudguyon.smartfontslib.FontTextView
                android:id="@+id/titleHotNews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/news1"
                app:font="@string/fontBold"
                android:textSize="18sp"
                android:padding="25dp"
                android:layout_alignParentBottom="true"
                android:textColor="@color/colorWhite"/>

            <fr.arnaudguyon.smartfontslib.FontTextView
                android:id="@+id/source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:font="@string/fontReguler"
                android:text="@string/portal1"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:padding="5dp"
                android:textColor="@color/colorWhite"/>

            <TextView
                android:id="@+id/titik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/source"
                android:layout_alignParentBottom="true"
                android:textColor="@color/colorWhite"
                android:text="@string/titik"/>


        </RelativeLayout>

    </ScrollView>

</LinearLayout>