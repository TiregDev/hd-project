<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize">

        <fr.arnaudguyon.smartfontslib.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:text="@string/forHeader"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            app:font="@string/fontReguler" />

        <ImageView
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/menu" />

        <com.andexert.library.RippleView
            android:id="@+id/pesan"
            rv_centered="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@id/menu"
            app:rv_centered="true"
            app:rv_color="@color/colorRipple"
            app:rv_rippleDuration="10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/ImgDesc"
                android:src="@drawable/massege_icon" />

        </com.andexert.library.RippleView>

    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/hotNews"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/ImgDesc"
                    android:scaleType="centerCrop"
                    android:src="@drawable/wisata" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:alpha="0.5"
                    android:background="@color/colorBlack" />

                <fr.arnaudguyon.smartfontslib.FontTextView
                    android:id="@+id/titleHotNews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:maxLines="2"
                    android:paddingBottom="25dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:text="@string/news1"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    app:font="@string/fontBold" />

                <fr.arnaudguyon.smartfontslib.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/hot"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    app:font="@string/fontBlack" />

                <fr.arnaudguyon.smartfontslib.FontTextView
                    android:id="@+id/source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="5dp"
                    android:padding="5dp"
                    android:text="@string/portal1"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    app:font="@string/fontReguler" />

                <TextView
                    android:id="@+id/titik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@id/source"
                    android:paddingBottom="5dp"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:text="@string/titik"
                    android:textColor="@color/colorWhite" />

                <fr.arnaudguyon.smartfontslib.FontTextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@id/titik"
                    android:padding="5dp"
                    android:text="@string/time1"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    app:font="@string/fontReguler" />

                <ImageView
                    android:id="@+id/forward"
                    android:contentDescription="@string/ImgDesc"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="20dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/forward_white"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/view_news"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:isScrollContainer="false"/>

        </LinearLayout>

</LinearLayout>